{
  "name": "verven",
  "version": "1.0.0",
  "description": "Strategic Medieval Web Game - Main Application",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:convex\" \"npm run dev:api\" \"npm run dev:frontend\"",
    "dev:convex": "convex dev",
    "dev:api": "nodemon --exec ts-node src/app.ts",
    "dev:frontend": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "convex:deploy": "convex deploy"
  },
  "dependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.7.0",
    "convex": "^1.0.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17"
  },
  "devDependencies": {
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/node": "^20.0.0",
    "@vitejs/plugin-react": "^4.6.0",
    "vite": "^7.0.4",
    "typescript": "~5.8.3",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.2",
    "concurrently": "^8.0.0",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20"
  }
}